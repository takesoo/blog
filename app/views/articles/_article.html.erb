<div class="row">
  <div class="col s12 m12">
    <div class="card white card-panel hoverable">
      <div class="card-content black-text article-title">
        <h4><%= article.title %></h3>
      </div>
      <div class="card-content black-text">
        <%= simple_format(article.text) %>
      </div>
      <div class="card-action">
        <span class="btn light-green lighten-1">
          <%= link_to 'SHOW', article_path(article.id), class: "white-text" %>
        </span>
        <span class="btn light-green lighten-1">
          <%= link_to 'EDIT', edit_article_path(article.id), class: "white-text" %>
        </span>
        <span class="btn light-green lighten-1">
          <%= link_to 'DESTROY', "/articles/#{article.id}", method: :delete, class: "white-text" %>
        </span>
      </div>
    </div>
  </div>
</div>
